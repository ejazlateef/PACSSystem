<!-- Page-specific CSS (use existing theme only) -->
<%- contentFor('body') %>

<!-- Start content -->
<div class="content">
  <div class="container-fluid">

    <!-- Page Title and Filters -->
    <div class="row">
      <div class="col-sm-12">
        <div class="page-title-box">
          <h4 class="page-title" style="display: inline-block;">Reviewer Process List</h4>
          <!-- Save button at the top right -->
          <div style="display: inline-block; float: right;">
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters Section (Search & Dropdowns) -->
    <div class="row mb-4">
      <div class="col-sm-12">
        <div class="page-title-box">
          <!-- Search and Filter Inputs -->
          <div class="d-flex justify-content-between">
            <div>
              <label for="radiologistName" class="form-label">Radiologist's Name</label>
              <select id="radiologistName" class="form-select" style="width: 200px;">
                <option selected>All</option>
                <option>ABC Lab Ali user</option>
                <!-- Add more radiologists as needed -->
              </select>
            </div>

            <div>
              <label for="reviewerStatus" class="form-label">Reviewer Status</label>
              <select id="reviewerStatus" class="form-select" style="width: 200px;">
                <option selected>All</option>
                <option>Compliance</option>
                <option>Non-Compliance</option>
              </select>
            </div>

            <div>
              <label for="checklistStatus" class="form-label">Checklist Status</label>
              <select id="checklistStatus" class="form-select" style="width: 200px;">
                <option selected>All</option>
                <option>Approve</option>
                <option>Reject</option>
                <option>Resubmission</option>
              </select>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Document Info Table Section -->
    <div class="row">
      <div class="col-12">
        <div class="card m-b-20">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered">
                <thead class="thead-light">
                  <tr>
                    <th>Document Name</th>
                    <th>Status</th>
                    <th>File</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Medical Degree Certificate</td>
                    <td>Uploaded</td>
                    <td><a href="#">degree.pdf</a></td>
                    <td>
                      <a href="#" class="text-primary" data-toggle="modal" data-target=".bs-example-modal-lg">View Checklist</a> |
<a href="#" class="text-success" data-toggle="modal" data-target=".bs-example-modal-lg">Approve</a> |
<a href="#" class="text-danger" data-toggle="modal" data-target=".bs-example-modal-lg">Reject</a> |
<a href="#" class="text-warning" data-toggle="modal" data-target=".bs-example-modal-lg">Resubmit</a>

                    </td>
                  </tr>
                  <tr>
                    <td>Radiology License</td>
                    <td>Uploaded</td>
                    <td><a href="#">radiology_license.pdf</a></td>
                    <td>
                      <a href="#" class="text-primary">View Checklist</a> |
                      <a href="#" class="text-success">Approve</a> |
                      <a href="#" class="text-danger">Reject</a> |
                      <a href="#" class="text-warning">Resubmit</a>
                    </td>
                  </tr>
                  <tr>
                    <td>Government ID</td>
                    <td>Uploaded</td>
                    <td><a href="#">id_cnic.pdf</a></td>
                    <td>
                      <a href="#" class="text-primary">View Checklist</a> |
                      <a href="#" class="text-success">Approved</a> |
                      <a href="#" class="text-danger">Reject</a> |
                      <a href="#" class="text-warning">Resubmit</a>
                    </td>
                  </tr>
                  <tr>
                    <td>Work Experience Letter</td>
                    <td>Pending</td>
                    <td>None</td>
                    <td>
                      <a href="#" class="text-primary">View Checklist</a> |
                      <a href="#" class="text-danger">Missing (Compulsory)</a>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="mt-3">
              Showing 1 to 4 of 4 entries.
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title mt-0" id="myLargeModalLabel">Review Checklist – Radiology License</h5>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      </div>
      <div class="modal-body">
        <form>

          <!-- Title Field -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" value="Review Checklist – Radiology License" readonly>
          </div>

          <!-- Checklist Items -->
          <div class="mb-3">
            <label for="checklist" class="form-label">Checklist Items</label>
            <div>
              <input type="checkbox" id="clearReadable" checked> Is document clear and readable?
            </div>
            <div>
              <input type="checkbox" id="expiryDate"> Is expiry date valid?
            </div>
            <div>
              <input type="checkbox" id="matchesDetails"> Matches Radiologist details?
            </div>
            <div>
              <input type="checkbox" id="meetsRequirements"> Meets regulatory requirements?
            </div>
          </div>

          <!-- Comments Box -->
          <div class="mb-3">
            <label for="comments" class="form-label">Comments</label>
            <textarea class="form-control" id="comments" rows="3" placeholder="Add comments here"></textarea>
          </div>

          <!-- Action Buttons -->
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary w-25">Approve</button>
            <button type="button" class="btn btn-danger w-25 ms-2">Reject</button>
            <button type="button" class="btn btn-warning w-25 ms-2">Request Resubmission</button>
          </div>

        </form>

        <!-- Audit Trail or Notification Section with Scroll -->
        <div class="mt-4">
          <h5>Audit Trail or Notification (System Log)</h5>
          <div class="notification-log">
            <ul class="list-unstyled">
              <li><i class="mdi mdi-check-circle text-success"></i> <strong>2025-10-01:</strong> Reviewer A approved Government ID</li>
              <li><i class="mdi mdi-alert-circle text-warning"></i> <strong>2025-10-01:</strong> Reviewer A requested resubmission of Radiology License</li>
              <li><i class="mdi mdi-check-circle text-success"></i> <strong>2025-09-30:</strong> Radiologist uploaded CPD Certificate</li>
              <li><i class="mdi mdi-check-circle text-success"></i> <strong>2025-09-25:</strong> Radiologist uploaded Medical Degree Certificate</li>
              <li><i class="mdi mdi-alert-circle text-warning"></i> <strong>2025-09-20:</strong> Reviewer A requested resubmission of Medical Degree Certificate</li>
              <li><i class="mdi mdi-check-circle text-success"></i> <strong>2025-09-10:</strong> Reviewer A approved Radiology License</li>
              <!-- Add more entries as needed -->
            </ul>
          </div>
        </div>

      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->





