<%- contentFor('HeaderCss') %>
<!-- Page-specific CSS (use existing theme only) -->
<%- contentFor('body') %>

<!-- Start content -->
<div class="content">
  <div class="container-fluid">

    <!-- Page Title with Save Button -->
    
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="page-title-box">
          <h4 class="page-title" style="display: inline-block;">Add Radiologist Experience</h4>
          <!-- Save button at the top right -->
          <div style="display: inline-block; float: right;">
            <button type="submit" class="btn btn-primary w-100">Save</button>
          </div>
          
        </div>
      </div>
    </div>

    <!-- Main Form Section -->
    <div class="row">
      <div class="col-12">
        <div class="card m-b-20">
          <div class="card-body">
            <form>

              <!-- Organisation Name and Job Title in 2 Columns -->
              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label">Organisation Name <span class="text-danger">*</span></label>
                  <input type="text" class="form-control" placeholder="Enter organisation name" value="ABC Hospital">
                </div>

                <div class="col-md-6">
                  <label class="form-label">Job Title <span class="text-danger">*</span></label>
                  
                  <select class="form-select form-control" disabled>
                    <option selected>Radiologist</option>
                    <option>Consultant Radiologist</option>
                    <option>Chief Radiologist</option>
                  </select>
                </div>
              </div>

              <!-- Year Start and Year End in 2 Columns -->
              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label">Year Start <span class="text-danger">*</span></label>
                  <div class="input-group">
                    <input type="date" class="form-control" value="2015-01-01">
                    <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
                  </div>
                </div>

                <div class="col-md-6">
                  <label class="form-label">Year End <span class="text-danger">*</span></label>
                  <div class="input-group">
                    <input type="date" class="form-control" value="2025-01-01">
                    <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
                  </div>
                </div>
              </div>

              <!-- Present Checkbox and Job Description in 2 Columns -->
              <div class="row mb-3">
                

                <div class="col-md-6">
                  <label class="form-label">Job Description</label>
                  <textarea class="form-control" placeholder="Enter job description here" rows="4">Working full time</textarea>
                </div>

                <div class="col-md-6">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="presentCheck">
                    <label class="form-check-label" for="presentCheck">Present</label>
                  </div>
                </div>
              </div>

              

            </form>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<%- contentFor('FooterJs') %>

<!-- Optional: Add custom CSS if needed -->
<style>
  .form-control {
    font-size: 14px; /* Adjust form field font size */
  }

  /* Adjust button and form alignment */
  .btn-primary {
    font-size: 14px; /* Button text size */
  }

  .page-title-box {
    padding-right: 30px;
  }

  /* Adjust layout for two columns */
  .row.mb-3 {
    margin-bottom: 20px;
  }

  .col-md-6 {
    margin-bottom: 1.5rem;
  }

  .row.d-flex.justify-content-between.align-items-center {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Input group for Year Start/End */
  .input-group-text {
    background-color: #f4f6f9;
  }

  /* Remove + button from Job Title dropdown */
  .input-group-text i {
    display: none;
  }

  /* Job Description Textarea Styling */
  textarea.form-control {
    font-size: 14px;
    resize: vertical; /* Allow user to resize vertically */
  }

  /* Make buttons aligned on top-right */
  .text-end {
    margin-right: 10px;
  }
</style>

<%- contentFor('FooterJs') %>
