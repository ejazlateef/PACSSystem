<% include ../Partials/HeaderRoot %>

<div class="wrapper-page"
    style="background-image: url('http://202.141.232.117:88/assets/hilton_repl/images/motto-bg.jpeg'); background-size: cover; background-position: center;">

    <div class="card">
        <div class="card-body">

            <h3 class="text-center m-0 mb-3">
                <a href="/" class="logo logo-admin d-flex align-items-center justify-content-center">
                    <i class="mdi mdi-hospital-building" style="color: red; font-size: 40px; margin-right: 8px;"></i>
                    <span style="font-weight: bold; font-size: 32px; color: #333;">ITS</span>
                </a>
            </h3>

            <h4 class="text-center mb-4">Registration</h4>

            <form class="form-horizontal" action="/register" method="POST">

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="firstName">Full Name <span style="color: red;">*</span></label>
                        <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Ali Khan" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email">Email or Phone Number <span style="color: red;">*</span></label>
                    <input type="text" class="form-control" id="email" name="email" placeholder="User Email / Phone Number" required>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="password">Password <span style="color: red;">*</span></label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="confirmPassword">Confirm Password <span style="color: red;">*</span></label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm password" required>
                    </div>
                </div>

                <ul class="small text-muted mb-3">
                    <li>Must be between 8–128 characters</li>
                    <li>Cannot use common phrases (e.g. “password”)</li>
                    <li>Cannot include your name, username, or email</li>
                </ul>

                <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" id="consentCheckbox" required>
    <label class="form-check-label" for="consentCheckbox">
        I agree with <a href="/terms-and-conditions" target="_blank">Terms and Conditions</a>.
    </label>
</div>

                <div class="form-group text-center">
                    <button class="btn btn-primary btn-block" type="submit" onclick="window.location.href='/pages-otp-radiologist-verification'">
    Continue
</button>
                </div>

                <hr>

                <div class="text-center mt-3">
                    <p>or Register with social media</p>
                    <div class="d-flex justify-content-center flex-wrap" style="gap: 10px;">
                        <a href="/auth/facebook" class="btn btn-outline-primary w-25">
                            <i class="fab fa-facebook-f me-2"></i> Facebook
                        </a>
                        <a href="/auth/google" class="btn btn-outline-danger w-25">
                            <i class="fab fa-google me-2"></i> Gmail
                        </a>
                    </div>
                </div>

            </form>

        </div>
    </div>

</div>

<% include ../Partials/FooterRoot %>
