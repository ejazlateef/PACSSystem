<%- contentFor('HeaderCss') %>
  <!-- Page-specific CSS (use existing theme only) -->
  <%- contentFor('body') %>

    <!-- Start content -->
    <div class="content">
      <div class="container-fluid">

        <!-- Page Title with Search and Add Document button -->
        <div class="row">
          <div class="col-sm-12">
            <div class="page-title-box">
              <h4 class="page-title" style="font-size: 24px; font-weight: bold;">Document Requirements for Radiologist
              </h4>
              <div class="d-flex justify-content-between">
                <div>
                  <input type="text" class="form-control" placeholder="Search" style="width: 200px;">
                </div>
                <div>
                  <button type="submit" class="btn btn-primary w-100"
                    onclick="window.location.href='/pages-add-required-documents'">Add Document</button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Start of Form Section (Document Form) -->

        <!-- Country and City Selection -->
        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Country <span class="text-danger">*</span></label>
            <select class="form-select form-control" required>
              <option selected>USA</option>
              <option>Canada</option>
              <option>UK</option>
              <option>Germany</option>
              <option>Australia</option>
              <!-- Add more countries here -->
            </select>
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label">City <span class="text-danger">*</span></label>
            <select class="form-select form-control" required>
              <option selected>New York</option>
              <option>Los Angeles</option>
              <option>Chicago</option>
              <option>Houston</option>
              <option>San Francisco</option>
              <!-- Add more cities here -->
            </select>
          </div>
        </div>

        <!-- Document Table -->
        <div class="row">
          <div class="col-12">
            <div class="card m-b-20">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped table-bordered">
                    <thead class="thead-light">
                      <tr>
                        <th>Document Name</th>
                        <th>Compulsory/Optional</th>
                        <th>Size</th>
                        <th>Type</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% const documents=[ { name: 'Medical Degree Cert.' , compulsory: 'Compulsory' , size: '2 MB' ,
                        type: 'JPG/PDF' }, { name: 'Medical License' , compulsory: 'Compulsory' , size: '2 MB' ,
                        type: 'JPG/PDF' }, { name: 'Training Certificate' , compulsory: 'Optional' , size: '2 MB' ,
                        type: 'JPG/PDF' }, { name: 'ID Proof (CNIC/Passport)' , compulsory: 'Compulsory' , size: '2 MB'
                        , type: 'JPG/PNG/PDF' }, { name: 'Experience Letter' , compulsory: 'Optional' , size: '2 MB' ,
                        type: 'PDF' } ]; %>
                        <% documents.forEach(doc=> { %>
                          <tr>
                            <td>
                              <%= doc.name %>
                            </td>
                            <td>
                              <%= doc.compulsory %>
                            </td>
                            <td>
                              <%= doc.size %>
                            </td>
                            <td>
                              <%= doc.type %>
                            </td>
                            <td>
                              <a href="pages-platform-admin-portal" class="btn btn-info btn-sm">View</a>
                              <a href="javascript:void(0);" class="btn btn-info btn-sm">Edit</a>
                              <a href="javascript:void(0);" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                          </tr>
                          <% }); %>
                    </tbody>
                  </table>
                </div>
                <div class="mt-3">
                  Showing 1 to 5 of 5 entries.
                </div>
              </div>
            </div>
          </div>
        </div>

      </div> <!-- container-fluid -->
    </div> <!-- content -->

    <%- contentFor('FooterJs') %>

      <!-- Optional: Add custom CSS for table styling -->
      <style>
        /* Adjusting table font size */
        .table td,
        .table th {
          font-size: 14px;
        }

        /* Styling action links (Modify and Delete) */
        .text-primary {
          color: #007bff;
          text-decoration: none;
        }

        .text-primary:hover {
          text-decoration: underline;
        }

        .text-danger {
          color: #dc3545;
          text-decoration: none;
        }

        .text-danger:hover {
          text-decoration: underline;
        }

        .thead-light {
          background-color: #f8f9fa;
        }

        /* Styling the page title */
        .page-title {
          font-size: 24px;
          font-weight: bold;
        }

        /* Add some padding to the table */
        .table {
          margin-top: 20px;
        }

        /* Adjust action column spacing */
        td a {
          margin-right: 10px;
        }

        .form-check-input {
          width: 40px;
          height: 20px;
        }

        .form-check {
          display: flex;
          justify-content: center;
          align-items: center;
        }
      </style>