<%- contentFor('HeaderCss') %>
<!-- Page-specific CSS (use existing theme only) -->
<%- contentFor('body') %>

<!-- Start content -->
<div class="content">
  <div class="container-fluid">

    <!-- Page Title with Save Button -->
     <div class="row">
      <div class="col-sm-12">
        <div class="page-title-box">
          <h4 class="page-title" style="display: inline-block;">Add Checklist Item</h4>
          <!-- Save button at the top right -->
          <div style="display: inline-block; float: right;">
            <button type="submit" class="btn btn-primary w-100">Save</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Form Section -->
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <label class="form-label">Document Name <span class="text-danger">*</span></label>
          <input type="text" class="form-control" placeholder="Enter document name" value="ID Card" required>
        </div>
      </div>

      <div class="col-md-6">
        <div class="mb-3">
          <label class="form-label">Size in MB <span class="text-danger">*</span></label>
          <input type="number" class="form-control" value="20" required>
        </div>
      </div>
    </div>

    <div class="row">
      <!-- Compulsory toggle -->
      <div class="col-md-6">
        <div class="mb-3 d-flex align-items-center">
          <label class="form-label me-3">Compulsory</label>
          <div class="form-check form-switch">
            <input class="form-check-input form-control" style="margin-top:-22px;margin-left: 10px;" type="checkbox" id="compulsoryCheck" checked>
          </div>
        </div>
      </div>

      <!-- Multiple Pages toggle -->
      <div class="col-md-6">
        <div class="mb-3 d-flex align-items-center">
          <label class="form-label me-3">Multiple Pages</label>
          <div class="form-check form-switch">
            <input class="form-check-input form-control"style="margin-top:-22px;margin-left: 10px;" type="checkbox" id="multiplePagesCheck">
          </div>
        </div>
      </div>
    </div>
 
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <label class="form-label">File Type <span class="text-danger">*</span></label>
          <select class="form-select form-control" required>
            <option selected>PDF</option>
            <option>Word</option>
            <option>Excel</option>
            <option>JPG</option>
          </select>
        </div>
      </div>
    </div>
<div class="row">
      <div class="col-sm-12">
        <div class="page-title-box">
                    <!-- Save button at the top right -->
          <div style="display: inline-block; float: right;">
                     <button type="submit" class="btn btn-primary w-100" onclick="window.location.href='/pages-add-checklist-documents'">Add Checklist</button>

          </div>
        </div>
      </div>
    </div>
    <!-- Checklist Items Table -->
    <div class="table-responsive mt-3">
      <table class="table table-bordered table-striped">
        <thead class="thead-light">
          <tr>
            <th>Checklist Item</th>
